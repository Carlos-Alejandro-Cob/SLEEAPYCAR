        </div>
    </nav>

    <div class="main-content">
        <div class="container">
            <%- body %>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <small>&copy; <%= new Date().getFullYear() %> SLEE APYCAR. Todos los derechos reservados.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>