<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || 'APYCAR - Comercializadora' %>
    </title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/assets/logo/logo%20apycar%20sin%20fondo.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Header Moderno APYCAR -->
    <header class="apycar-header">
        <div class="header-container">
            <!-- Logo -->
            <% 
                let logoHref = '/admin/envios'; // Por defecto para administradores
                if (user) {
                    // Si es cliente (rol 7) o no es admin/super usuario, redirigir al catálogo
                    if (user.id_rol_fk === 7 || (user.id_rol_fk !== 1 && user.id_rol_fk !== 6)) {
                        logoHref = '/catalogo';
                    }
                } else {
                    // Si no está autenticado, redirigir al login
                    logoHref = '/auth/login';
                }
            %>
            <a href="<%= logoHref %>" class="logo-section">
                <img src="/assets/logo/logo%20apycar%20sin%20fondo.png" alt="APYCAR Logo">
            </a>

            <!-- Barra de Búsqueda -->
            <div class="search-bar">
                <i class="fas fa-search search-icon"></i>
                <input type="text" placeholder="Buscar productos..." id="searchInput">
            </div>

            <!-- Acciones del Header -->
            <div class="header-actions">
                <div class="nav-links">
                    <% if (user) { %>
                        <% if (user.id_rol_fk===1 || user.id_rol_fk===6) { %>
                            <a href="/admin/users">Gestión de Usuarios</a>
                            <% } %>
                                <% 
                                    // Determinar la ruta según el rol
                                    let profileHref = '/auth/profile';
                                    if (user.id_rol_fk === 7 || (user.id_rol_fk !== 1 && user.id_rol_fk !== 6)) {
                                        // Clientes van a Mi Cuenta
                                        profileHref = '/cuenta';
                                    }
                                %>
                                <a href="<%= profileHref %>" title="Ver mi cuenta">
                                    <i class="fas fa-user-circle me-1"></i>
                                    <%= user.nombre_completo %>
                                </a>
                                <a href="/auth/logout">Cerrar Sesión</a>
                                <% } else { %>
                                    <a href="/auth/login">Iniciar sesión</a>
                                    <a href="/auth/register">Registrarse</a>
                                    <% } %>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container-fluid py-4">
        <% if (locals.success_msg && locals.success_msg.length> 0) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= success_msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
                <% if (locals.error_msg && locals.error_msg.length> 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error_msg %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>
                        <% if (locals.error && locals.error.length> 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>