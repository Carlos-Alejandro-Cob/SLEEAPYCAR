<%- include('../layouts/header', { ...locals, title: 'Gestión de Usuarios - SLEE APYCAR' }) %>

    <div class="row">
        <style>
            .table-sm td,
            .table-sm th {
                padding-top: 0.15rem !important;
                padding-bottom: 0.15rem !important;
                vertical-align: middle !important;
            }
        </style>
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-start mb-4">
                <div>
                    <h1 class="h3 mb-2">Gestión de Usuarios</h1>
                    <p class="text-muted mb-0">Administra y monitorea todos los usuarios del sistema</p>
                </div>
                <div class="d-flex gap-2 flex-wrap">
                    <a href="/admin/users/nuevo" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nuevo Usuario
                    </a>
                </div>
            </div>

            <!-- Results Section -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <span class="text-muted" style="font-size: 0.875rem; font-weight: 500;">
                            <%= users.length %>
                                <%= users.length===1 ? 'usuario' : 'usuarios' %>
                        </span>
                    </div>
                </div>
                <div class="card-body p-0">
                    <% if (users.length===0) { %>
                        <div class="text-center py-5">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron usuarios</h5>
                            <a href="/admin/users/nuevo" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Crear Primer Usuario
                            </a>
                        </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover table-sm mb-0" style="font-size: 0.75rem;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nombre Completo</th>
                                            <th>Nombre de Usuario</th>
                                            <th>Email</th>
                                            <th>Rol</th>
                                            <th width="120">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% users.forEach(function(user) { %>
                                            <tr>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        <%= user.id_usuario %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong>
                                                        <%= user.nombre_completo %>
                                                    </strong>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= user.nombre_usuario %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= user.email %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        <%= user.id_rol_fk %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-1">
                                                        <a href="/admin/users/<%= user.id_usuario %>/editar"
                                                            class="btn btn-sm btn-outline-primary" title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <form action="/admin/users/<%= user.id_usuario %>?_method=DELETE"
                                                            method="POST" class="d-inline"
                                                            onsubmit="return confirm('¿Estás seguro de que quieres eliminar el usuario <%= user.nombre_usuario %>?');">
                                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                title="Eliminar">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <% } %>
                </div>
            </div>
        </div>
    </div>

    <%- include('../layouts/footer') %>