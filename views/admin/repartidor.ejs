<%- include('../layouts/header', { ...locals, title: 'Panel de Repartidor - APYCAR' }) %>

<div class="container-fluid px-3 px-md-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="mb-3">
                <h1 class="h4 mb-1 fw-bold">Panel de Repartidor</h1>
                <p class="text-muted mb-0 small">Gestiona tu ruta de entrega</p>
            </div>

            <!-- Crear Ruta de Entrega Section -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body py-2">
                    <form action="/admin/repartidor/ruta" method="POST">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0">
                                <i class="fas fa-qrcode text-muted"></i>
                            </span>
                            <input type="text" 
                                   class="form-control border-start-0" 
                                   placeholder="Escanear o ingresar código de envío" 
                                   name="codigo_envio"
                                   required>
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-plus me-2"></i>Agregar a la Ruta
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ruta de Entrega Section -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="card-header bg-white border-bottom px-4 py-3">
                        <h5 class="mb-0 fw-semibold">Ruta de Entrega</h5>
                    </div>
                    <div class="p-4">
                        <% if (ruta && ruta.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                            <thead>
                                <tr>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">ID ENVÍO</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">DESTINATARIO</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">DIRECCIÓN</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">ESTADO</th>
                                    <th class="fw-semibold text-end" style="font-size: 0.75rem; width: 120px;">ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ruta.forEach(function(envio) { %>
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary"><%= envio.ID_Envio %></span>
                                        </td>
                                        <td>
                                            <span class="fw-semibold"><%= envio.Nombre_Destinatario %></span>
                                        </td>
                                        <td>
                                            <small class="text-muted"><%= envio.Direccion_Completa %></small>
                                        </td>
                                        <td>
                                            <% 
                                            let estadoBadgeClass = 'bg-secondary';
                                            if (envio.Estado_Envio === 'Entregado') estadoBadgeClass = 'bg-success';
                                            else if (envio.Estado_Envio === 'En Ruta') estadoBadgeClass = 'bg-warning';
                                            else if (envio.Estado_Envio === 'Pendiente') estadoBadgeClass = 'bg-info';
                                            else if (envio.Estado_Envio === 'Intento de entrega') estadoBadgeClass = 'bg-warning';
                                            else if (envio.Estado_Envio === 'Devuelto a bodega') estadoBadgeClass = 'bg-secondary';
                                            else if (envio.Estado_Envio === 'Cancelado en ruta') estadoBadgeClass = 'bg-danger';
                                            %>
                                            <span class="badge <%= estadoBadgeClass %>"><%= envio.Estado_Envio %></span>
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-primary dropdown-toggle" 
                                                        data-bs-toggle="dropdown" 
                                                        aria-expanded="false">
                                                    <i class="fas fa-cog me-1"></i>Acciones
                                                </button>
                                                <ul class="dropdown-menu" style="min-width: 280px;">
                                                    <li>
                                                        <form action="/admin/envios/<%= envio._id %>?_method=PUT" method="POST" class="d-inline w-100">
                                                            <input type="hidden" name="estado_envio" value="Entregado">
                                                            <button type="submit" class="dropdown-item text-success py-2">
                                                                <i class="fas fa-check me-2"></i><span class="fw-semibold">Entregado</span>
                                                                <small class="d-block text-muted ms-4 mt-1" style="font-size: 0.7rem;">Marcar como entregado exitosamente</small>
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider my-1"></li>
                                                    <li>
                                                        <form action="/admin/envios/<%= envio._id %>?_method=PUT" method="POST" class="d-inline w-100">
                                                            <input type="hidden" name="estado_envio" value="Intento de entrega">
                                                            <button type="submit" class="dropdown-item py-2">
                                                                <i class="fas fa-exclamation-triangle me-2 text-warning"></i><span class="fw-semibold">Intento de entrega</span>
                                                                <small class="d-block text-muted ms-4 mt-1" style="font-size: 0.7rem;">Fue al destino pero no pudo entregar</small>
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form action="/admin/envios/<%= envio._id %>?_method=PUT" method="POST" class="d-inline w-100">
                                                            <input type="hidden" name="estado_envio" value="Devuelto a bodega">
                                                            <button type="submit" class="dropdown-item py-2">
                                                                <i class="fas fa-undo me-2 text-secondary"></i><span class="fw-semibold">Devuelto a bodega</span>
                                                                <small class="d-block text-muted ms-4 mt-1" style="font-size: 0.7rem;">No se logró entregar</small>
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider my-1"></li>
                                                    <li>
                                                        <button type="button" 
                                                                class="dropdown-item text-danger py-2" 
                                                                data-bs-toggle="modal" 
                                                                data-bs-target="#cancelarModal<%= envio._id %>">
                                                            <i class="fas fa-times-circle me-2"></i><span class="fw-semibold">Cancelado en ruta</span>
                                                            <small class="d-block text-muted ms-4 mt-1" style="font-size: 0.7rem;">Opcional, con motivo</small>
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    
                                    <!-- Modal para Cancelar en ruta -->
                                    <div class="modal fade" id="cancelarModal<%= envio._id %>" tabindex="-1" aria-labelledby="cancelarModalLabel<%= envio._id %>" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="cancelarModalLabel<%= envio._id %>">Cancelar Envío en Ruta</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form action="/admin/envios/<%= envio._id %>?_method=PUT" method="POST">
                                                    <div class="modal-body">
                                                        <input type="hidden" name="estado_envio" value="Cancelado en ruta">
                                                        <div class="mb-3">
                                                            <label for="motivo_cancelacion<%= envio._id %>" class="form-label">Motivo de cancelación <span class="text-danger">*</span></label>
                                                            <textarea class="form-control" 
                                                                      id="motivo_cancelacion<%= envio._id %>" 
                                                                      name="motivo_cancelacion" 
                                                                      rows="3" 
                                                                      placeholder="Ingrese el motivo de la cancelación..."
                                                                      required></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-times-circle me-2"></i>Confirmar Cancelación
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-route fa-3x text-muted" style="opacity: 0.3;"></i>
                            </div>
                            <h6 class="text-muted mb-2 fw-semibold">No hay envíos en la ruta de entrega</h6>
                            <p class="text-muted mb-0 small">Agregue envíos usando el campo de arriba para comenzar</p>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Ocultar footer en el panel del repartidor */
    .apycar-footer {
        display: none !important;
    }

    /* Ajustes de layout - Altura dinámica según contenido */
    body {
        padding-bottom: 0 !important;
    }

    main {
        height: auto;
        min-height: auto;
    }

    .container-fluid {
        height: auto;
        min-height: auto;
        padding-bottom: 1rem;
    }

    .row {
        height: auto;
        min-height: auto;
    }

    .col-12 {
        height: auto;
        min-height: auto;
    }

    .input-group-text {
        border-radius: 8px 0 0 8px;
    }
    
    .input-group .form-control {
        border-radius: 0;
    }
    
    .input-group .btn {
        border-radius: 0 8px 8px 0;
    }
    
    /* Tabla optimizada */
    .table thead th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
        color: #495057;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 0.75rem 1rem;
        border-top: none;
    }
    
    .table tbody td {
        padding: 0.875rem 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e9ecef;
        font-size: 0.875rem;
    }
    
    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table tbody tr:last-child td {
        border-bottom: none;
    }

    /* Estilos compactos para el dropdown - Expandible completamente */
    .table-responsive {
        position: relative;
    }

    .dropdown-menu {
        font-size: 0.875rem;
        padding: 0.25rem 0;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        max-height: none !important;
    }

    @media (max-width: 991.98px) {
        .table-responsive {
            overflow-x: auto;
        }
    }

    .dropdown-item {
        font-size: 0.875rem;
        line-height: 1.4;
        padding: 0.5rem 1rem;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .dropdown-item small {
        line-height: 1.3;
    }

    .dropdown-item i {
        font-size: 0.875rem;
    }

    .dropdown-divider {
        margin: 0.25rem 0;
    }

    /* Cards optimizados */
    .card {
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }

    /* Botón de acciones más compacto */
    .btn-sm {
        font-size: 0.8125rem;
        padding: 0.35rem 0.65rem;
    }

    /* Badge de estado */
    .badge {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.35em 0.65em;
    }

    /* Espaciado reducido en sección vacía */
    .text-center.py-4 {
        padding-top: 2rem !important;
        padding-bottom: 2rem !important;
    }
</style>

<%- include('../layouts/footer') %>
