<%- include('../layouts/header', { ...locals, title: 'Panel de Repartidor - APYCAR' }); %>

<div class="container-fluid px-3 px-md-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="mb-3">
                <h1 class="h4 mb-1 fw-bold">Panel de Repartidor</h1>
                <p class="text-muted mb-0 small">Gestiona tu ruta de entrega</p>
            </div>

            <!-- Crear Ruta de Entrega Section -->
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body py-3">
                    <form action="/admin/repartidor/ruta" method="POST">
                        <div class="row g-2">
                            <div class="col-md-5">
                                <label for="codigo_envio" class="form-label small fw-semibold mb-1">
                                    <i class="fas fa-qrcode me-1"></i>Código de Envío
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       placeholder="Escanear o ingresar código de envío" 
                                       name="codigo_envio"
                                       id="codigo_envio"
                                       required>
                            </div>
                            <div class="col-md-5">
                                <label for="codigo_confirmacion" class="form-label small fw-semibold mb-1">
                                    <i class="fas fa-key me-1"></i>Código de Confirmación <span class="text-danger">*</span>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       placeholder="Código del bodeguero (6 dígitos)" 
                                       name="codigo_confirmacion"
                                       id="codigo_confirmacion"
                                       maxlength="6"
                                       pattern="[0-9]{6}"
                                       required>
                                <small class="text-muted">Código proporcionado por el bodeguero al crear el envío</small>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button class="btn btn-primary w-100" type="submit">
                                    <i class="fas fa-plus me-1"></i>Agregar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Ruta de Entrega Section -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="card-header bg-white border-bottom px-4 py-3">
                        <h5 class="mb-0 fw-semibold">Ruta de Entrega</h5>
                    </div>
                    <div class="p-4">
                        <% if (ruta && ruta.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                            <thead>
                                <tr>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">ID ENVÍO</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">DESTINATARIO</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">DIRECCIÓN</th>
                                    <th class="fw-semibold" style="font-size: 0.75rem;">ESTADO</th>
                                    <th class="fw-semibold text-end" style="font-size: 0.75rem; width: 120px;">ACCIONES</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% ruta.forEach(function(envio) { %>
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary"><%= envio.ID_Envio %></span>
                                        </td>
                                        <td>
                                            <span class="fw-semibold"><%= envio.Nombre_Destinatario %></span>
                                        </td>
                                        <td>
                                            <small class="text-muted"><%= envio.Direccion_Completa %></small>
                                        </td>
                                        <td>
                                            <% 
                                            let estadoBadgeClass = 'bg-secondary';
                                            if (envio.Estado_Envio === 'Entregado') estadoBadgeClass = 'bg-success';
                                            else if (envio.Estado_Envio === 'En envío') estadoBadgeClass = 'bg-info';
                                            else if (envio.Estado_Envio === 'En Ruta') estadoBadgeClass = 'bg-warning';
                                            else if (envio.Estado_Envio === 'Pendiente') estadoBadgeClass = 'bg-secondary';
                                            else if (envio.Estado_Envio === 'Intento de entrega') estadoBadgeClass = 'bg-warning';
                                            else if (envio.Estado_Envio === 'Devuelto a bodega') estadoBadgeClass = 'bg-secondary';
                                            else if (envio.Estado_Envio === 'Cancelado en ruta') estadoBadgeClass = 'bg-danger';
                                            else if (envio.Estado_Envio === 'Despachado') estadoBadgeClass = 'bg-primary';
                                            %>
                                            <span class="badge <%= estadoBadgeClass %>"><%= envio.Estado_Envio %></span>
                                        </td>
                                        <td class="text-end">
                                            <button type="button" 
                                                    class="btn btn-sm btn-outline-primary btn-acciones" 
                                                    data-envio-id="<%= envio._id %>"
                                                    data-envio-codigo="<%= envio.ID_Envio %>"
                                                    data-destinatario="<%= envio.Nombre_Destinatario %>"
                                                    data-direccion="<%= envio.Direccion_Completa %>"
                                                    data-estado="<%= envio.Estado_Envio %>">
                                                <i class="fas fa-cog me-1"></i>Acciones
                                            </button>
                                        </td>
                                    </tr>
                                <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <div class="mb-3">
                                <i class="fas fa-route fa-3x text-muted" style="opacity: 0.3;"></i>
                            </div>
                            <h6 class="text-muted mb-2 fw-semibold">No hay envíos en la ruta de entrega</h6>
                            <p class="text-muted mb-0 small">Agregue envíos usando el campo de arriba para comenzar</p>
                        </div>
                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Acciones - Template único reutilizable -->
<div class="modal fade" id="accionesModalTemplate" tabindex="-1" aria-labelledby="accionesModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="accionesModalLabel">
                    <i class="fas fa-cog me-2"></i>Acciones - <span id="modal-codigo-envio"></span>
                </h5>
                <button type="button" class="btn-close" onclick="cerrarModalAcciones()" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <p class="text-muted mb-3">
                        <strong>Destinatario:</strong> <span id="modal-destinatario"></span><br>
                        <strong>Dirección:</strong> <span id="modal-direccion"></span>
                    </p>
                </div>
                
                <div class="d-grid gap-2">
                    <!-- Botón para cambiar a "En envío" (requiere código del bodeguero) -->
                    <button type="button" 
                            class="btn btn-info w-100 text-start" 
                            id="btn-en-envio"
                            onclick="abrirModalCodigoBodeguero()">
                        <i class="fas fa-truck me-2"></i><span class="fw-semibold">En envío</span>
                        <small class="d-block ms-4 mt-1" style="font-size: 0.75rem;">Confirmar recepción con código del bodeguero</small>
                    </button>
                    
                    <form id="form-entregado" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="estado_envio" value="Entregado">
                        <button type="button" onclick="abrirModalCodigoCliente()" class="btn btn-success w-100 text-start">
                            <i class="fas fa-check me-2"></i><span class="fw-semibold">Entregado</span>
                            <small class="d-block ms-4 mt-1" style="font-size: 0.75rem;">Confirmar entrega con código del cliente</small>
                        </button>
                    </form>
                    
                    <form id="form-intento" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="estado_envio" value="Intento de entrega">
                        <button type="submit" class="btn btn-warning w-100 text-start">
                            <i class="fas fa-exclamation-triangle me-2"></i><span class="fw-semibold">Intento de entrega</span>
                            <small class="d-block ms-4 mt-1" style="font-size: 0.75rem;">Fue al destino pero no pudo entregar</small>
                        </button>
                    </form>
                    
                    <form id="form-devuelto" method="POST" class="d-inline">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="estado_envio" value="Devuelto a bodega">
                        <button type="submit" class="btn btn-secondary w-100 text-start">
                            <i class="fas fa-undo me-2"></i><span class="fw-semibold">Devuelto a bodega</span>
                            <small class="d-block ms-4 mt-1" style="font-size: 0.75rem;">No se logró entregar</small>
                        </button>
                    </form>
                    
                    <hr class="my-2">
                    
                    <button type="button" 
                            class="btn btn-danger w-100 text-start" 
                            onclick="abrirModalCancelar()">
                        <i class="fas fa-times-circle me-2"></i><span class="fw-semibold">Cancelado en ruta</span>
                        <small class="d-block ms-4 mt-1" style="font-size: 0.75rem;">Opcional, con motivo</small>
                    </button>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" onclick="cerrarModalAcciones()">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Código Bodeguero (En envío) -->
<div class="modal fade" id="codigoBodegueroModal" tabindex="-1" aria-labelledby="codigoBodegueroLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="codigoBodegueroLabel">
                    <i class="fas fa-key me-2"></i>Confirmar Recepción de Bodeguero
