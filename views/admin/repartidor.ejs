                <button type="button" class="btn-close" onclick="cerrarModalCancelar()" aria-label="Close"></button>
            </div>
            <form id="form-cancelar" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="estado_envio" value="Cancelado en ruta">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="motivo_cancelacion" class="form-label">Motivo de cancelación <span class="text-danger">*</span></label>
                        <textarea class="form-control" 
                                  id="motivo_cancelacion" 
                                  name="motivo_cancelacion" 
                                  rows="3" 
                                  placeholder="Ingrese el motivo de la cancelación..."
                                  required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" onclick="cerrarModalCancelar()">Cancelar</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-times-circle me-2"></i>Confirmar Cancelación
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

