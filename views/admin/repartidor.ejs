<script>
    let envioActualId = null;
    let envioActualEstado = null;
    
    // Función para abrir el modal de acciones
    function abrirModalAcciones(envioId, codigoEnvio, destinatario, direccion, estado) {
        envioActualId = envioId;
        envioActualEstado = estado;
        
        // Actualizar contenido del modal
        document.getElementById('modal-codigo-envio').textContent = codigoEnvio;
        document.getElementById('modal-destinatario').textContent = destinatario;
        document.getElementById('modal-direccion').textContent = direccion;
        
        // Mostrar/ocultar botones según el estado
        const btnEnEnvio = document.getElementById('btn-en-envio');
        const btnEntregado = document.getElementById('form-entregado').parentElement.querySelector('button');
        
        // Mostrar botón "En envío" solo si el estado es "Despachado"
        if (estado === 'Despachado') {
            btnEnEnvio.style.display = 'block';
        } else {
            btnEnEnvio.style.display = 'none';
        }
        
        // Mostrar botón "Entregado" solo si el estado es "En envío"
        if (estado === 'En envío') {
            btnEntregado.style.display = 'block';
        } else {
            btnEntregado.style.display = 'none';
        }
        
        // Actualizar acciones de los formularios con método override en query string
        const baseUrl = '/admin/envios/' + envioId + '?_method=PUT';
        document.getElementById('form-en-envio').action = baseUrl;
        document.getElementById('form-entregado-codigo').action = baseUrl;
        document.getElementById('form-intento').action = baseUrl;
        document.getElementById('form-devuelto').action = baseUrl;
        
        // Mostrar modal
        const modal = document.getElementById('accionesModalTemplate');
        modal.style.display = 'block';
        modal.classList.add('show');
        modal.setAttribute('aria-hidden', 'false');
        document.body.classList.add('modal-open');
        
        // Crear backdrop
        if (!document.querySelector('.modal-backdrop')) {
            const backdrop = document.createElement('div');
