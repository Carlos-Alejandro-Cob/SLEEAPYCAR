<%- include('../layouts/header', { ...locals, title: 'Gestión de Envíos - SLEE APYCAR' }) %>

<div class="row">
    <div class="col-12">
        <!-- Header Section -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-1">
                    <i class="fas fa-truck me-2 text-primary"></i>
                    Gestión de Envíos
                </h1>
                <p class="text-muted">Administra y monitorea todos los envíos del sistema</p>
            </div>
            <a href="/admin/envios/nuevo" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>
                Nuevo Envío
            </a>
        </div>

        <!-- Filters Section -->
        <div class="card mb-4">
            <div class="card-body">
                <form method="GET" action="/admin/envios" class="row g-3">
                    <div class="col-md-6">
                        <label for="q" class="form-label">Buscar</label>
                        <input type="text" class="form-control" id="q" name="q"
                               placeholder="Buscar por destinatario o ID de envío..."
                               value="<%= query || '' %>">
                    </div>
                    <div class="col-md-4">
                        <label for="estado" class="form-label">Estado</label>
                        <select class="form-select" id="estado" name="estado">
                            <option value="">Todos los estados</option>
                            <option value="Pendiente" <%= estadoFiltro === 'Pendiente' ? 'selected' : '' %>>Pendiente</option>
                            <option value="En Ruta" <%= estadoFiltro === 'En Ruta' ? 'selected' : '' %>>En Ruta</option>
                            <option value="Entregado" <%= estadoFiltro === 'Entregado' ? 'selected' : '' %>>Entregado</option>
                        </select>
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-primary me-2">
                            <i class="fas fa-search me-1"></i>
                            Filtrar
                        </button>
                        <a href="/admin/envios" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>
                            Limpiar
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Results Section -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-list me-2"></i>
                    Lista de Envíos (<%= envios.length %> resultados)
                </h5>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-outline-primary btn-sm" onclick="exportarExcel()">
                        <i class="fas fa-file-excel me-1"></i>
                        Exportar
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <% if (envios.length === 0) { %>
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No se encontraron envíos</h5>
                        <p class="text-muted">Intenta ajustar los filtros de búsqueda</p>
                        <a href="/admin/envios/nuevo" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>
                            Crear Primer Envío
                        </a>
                    </div>
                <% } else { %>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID Envío</th>
                                    <th>Destinatario</th>
                                    <th>Dirección</th>
                                    <th>Estado</th>
                                    <th>Foto Entrega</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% envios.forEach(function(envio) { %>
                                    <tr>
                                        <td>
                                            <span class="badge bg-secondary"><%= envio.ID_Envio %></span>
                                        </td>
                                        <td>
                                            <strong><%= envio.Nombre_Destinatario %></strong>
                                        </td>
                                        <td>
                                            <small class="text-muted"><%= envio.Direccion_Completa %></small>
                                        </td>
                                        <td>
                                            <%
                                            let badgeClass = 'bg-secondary';
                                            if (envio.Estado_Envio === 'Entregado') badgeClass = 'bg-success';
                                            else if (envio.Estado_Envio === 'En Ruta') badgeClass = 'bg-warning';
                                            else if (envio.Estado_Envio === 'Pendiente') badgeClass = 'bg-info';
                                            %>
                                            <span class="badge <%= badgeClass %>"><%= envio.Estado_Envio %></span>
                                        </td>
                                        <td>
                                            <% if (envio.URL_Foto_Entrega) { %>
                                                <a href="<%= envio.URL_Foto_Entrega %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-image me-1"></i>
                                                    Ver Foto
                                                </a>
                                            <% } else { %>
                                                <span class="text-muted">Sin foto</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/admin/envios/<%= envio._id %>/editar" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger js-delete-btn"
                                                        data-envio-id="<%= envio._id %>" data-envio-codigo="<%= envio.ID_Envio %>">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación de Eliminación -->
<div class="modal fade" id="modalEliminar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirmar Eliminación
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar el envío <strong id="envioId"></strong>?</p>
                <p class="text-muted small">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="formEliminar" action="" method="POST" style="display: inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>
                        Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../layouts/footer') %>
